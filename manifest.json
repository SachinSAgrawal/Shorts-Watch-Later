{
  "manifest_version": 3,
  "name": "YouTube Shorts Watch Later",
  "version": "1.0",
  "description": "Adds a native-looking Watch Later button to each video in the Shorts tab of a YouTube channel.",
  "permissions": [
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "32": "/icons/32.png",
    "128": "/icons/128.png",
    "512": "/icons/512.png"
  }
}